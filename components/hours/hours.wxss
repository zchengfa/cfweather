/* components/weatherForecast/weatherForecast.wxss */
/*滚动视图*/
.scroll{
  width: 100%;
  white-space: nowrap;
}
.scroll-item{
  display: inline-block;
  margin: 10rpx;
  width: 20%;
  text-align: center;
}
.item-data{
  display: block;
  margin-top: 16rpx;
  text-align: center;
  color: rgb(32, 230, 230);
  font-size: 24rpx;
}
/*温度*/
.temp{
  font-size: 22rpx;
  color: red;
}
.weather-text{
  color: rgb(255, 0, 47);
}
.img{
  width: 40rpx;
  height: 40rpx;
}
