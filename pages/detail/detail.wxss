/* pages/detail/detail.wxss */
.clearfix::after{
  display: block;
  content: "";
  clear: both;
}
image{
  width: 40rpx;
  max-height:100rpx;
}
.detail-container{
  position: relative;
  margin:0 auto;
  height:100%;
  color: white;
  font-size: 26rpx;
  text-indent: 20rpx;
  /* background-color: darkgray; */
  overflow: hidden;
  /* box-shadow: salmon 20rpx 20rpx 15rpx; */
  background-image: url("https://gd-hbimg.huaban.com/275ecf1db12f6dabf3f00725d858e636eeac54aff49d-fR5Vyo_fw658");
}
.container{
  position: relative;
  margin-top:20rpx;
}
.content{
  margin-top: 10rpx;
  margin-bottom:10rpx
}
.container-h{
  /* position: relative;
  top: 10rpx; */
  font-size: 30rpx;
  font-weight: bolder;
}
.location{
  position: relative;
  top:10rpx;
  left:10rpx;
  width: 30rpx;
}
.city{
  display: inline-block;
  color: red;
  font-weight: bolder;
}
.txt{
  color: red;
  font-weight: bolder;
}
text{
  display: block;
  margin-top: 15rpx;
}
/* 新闻资讯 */
.news-container{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx dotted darkgrey;
}
.news-container text{
  height: 40rpx;
}
.item text{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.news-l{
  display: flex;
  justify-content:flex-start;
  align-items: center;
 
}
.news-l image{
  padding: 10rpx;
  width: 160rpx;
  border-radius: 42rpx;
}
.news-r{
  padding-left: 10rpx;
  width: 70%;
}
.news-r text{
  font-size: 24rpx;
}
.news-time{
  margin-top: 15rpx;
}
.news-time text{
  font-size: 22rpx;
  color: rgba(0, 0, 255, 0.425);
}