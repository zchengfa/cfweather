/* pages/index/index.wxss */
#weather{
  background-repeat: no-repeat;
  color: white;
  background-size: cover;
}
image{
  width: 40rpx;
}
/*清除浮动*/
.clearfix::after{
  display: block;
  content: "";
  clear: both;
}
now,.now-container{
  overflow: hidden;
}
.forecast-container{
  margin: 80rpx auto 20rpx;
  width:94%;
  background-color:rgba(225, 238, 238, 0.6);
  border-radius: 20rpx;
}
/*天气标题*/
.weather-head{
  position: relative;
  top: 16rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: bolder;
  color: black;
}
/* 生活指数 */
.life-container{
  margin-top: 80rpx;
  background-color: rgba(225, 238, 238, 0.6);
  color: black;
  font-weight: bolder;
}
/*滚动视图*/
scroll-view{
  width: 100%;
  white-space: nowrap;
}
.image-container{
  width: 2500rpx;
  height:200rpx;
}
/*将画布保存成的图片*/
.canvas-image{
  position: relative;
  top:20rpx;
  width: 100%;
  height:100%;
}
/*画布*/
.canva {
  width: 100%;
  height:100%;
}